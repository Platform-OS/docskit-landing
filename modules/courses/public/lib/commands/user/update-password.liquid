{% liquid
  function object = 'modules/courses/commands/user/update-password/build', user: user, password: password, confirm_password: confirm_password
  function object = 'modules/courses/commands/user/update-password/check', object: object

  if object.valid
    graphql object = 'modules/user/user/update', id: object.id, password: object.password
    hash_assign object['valid'] = true
  endif

  return object
%}
