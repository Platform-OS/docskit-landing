{% liquid
  function current_user = 'modules/user/lib/queries/user/current'
  function can = 'modules/permission/lib/helpers/can_do', requester: current_user, do: 'courses.manage'
  unless can
    redirect_to '/course'
  endunless

  function object = 'modules/courses/commands/module/update', object: context.params

  if object.valid
    redirect_to '/admin/course/modules'
  endif
%}
